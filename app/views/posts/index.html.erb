<div class="container mt-5">
  <h1>All Posts</h1>

  <ul class="list-group">
    <% @posts.each do |post| %>
      <li class="list-group-item">
        <h3><%= link_to post.title, post_path(post) %></h3>
        <p><%= post.content.truncate(100) %></p>
        <%= link_to "Read more", post_path(post), class: "btn btn-primary" %>
      </li>
    <% end %>
  </ul>
</div>

